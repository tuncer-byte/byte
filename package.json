{
  "name": "byte",
  "displayName": "Byte AI Assistant",
  "description": "AI destekli kodlama asistanı",
  "version": "0.0.1",
  "publisher": "tuncer-byte", 
  "author": {
    "name": "Tuncer Bagcababasi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tuncer-byte/byte"
  },
  "license": "MIT",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "Byte AI Asistanı",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "ai-assistant": [
        {
          "id": "byteChatView",
          "name": "AI Sohbet",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "byte.openChat",
        "title": "Byte: Sohbet Panelini Aç"
      },
      {
        "command": "byte.explainCode",
        "title": "Byte: Seçili Kodu Açıkla"
      },
      {
        "command": "byte.refactorCode",
        "title": "Byte: Seçili Kodu İyileştir"
      },
      {
        "command": "byte.configureAI",
        "title": "Byte: AI Servisini Yapılandır"
      },
      {
        "command": "byte.generateDocs",
        "title": "Byte: Generate Documentation"
      },
      {
        "command": "byte.optimizeCode",
        "title": "Byte: Optimize Code"
      },
      {
        "command": "byte.generateTests",
        "title": "Byte: Generate Unit Tests"
      },
      {
        "command": "byte.addComments",
        "title": "Byte: Add Comments to Code"
      },
      {
        "command": "byte.findIssues",
        "title": "Byte: Analyze Code Issues"
      },
      {
        "command": "byte.codeChat",
        "title": "Byte: Kod Bloğu ile Sohbet Et",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "byte.inlineCodeAnalysis",
        "title": "Byte: Kodu Analiz Et",
        "icon": "$(sparkle)"
      },
      {
        "command": "byte.askQuestionAboutCode",
        "title": "Byte: Kod Hakkında Soru Sor",
        "icon": "$(question)"
      }
    ],
    "keybindings": [
      {
        "command": "byte.codeChat",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorHasSelection"
      },
      {
        "command": "byte.inlineCodeAnalysis",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorHasSelection"
      },
      {
        "command": "byte.askQuestionAboutCode",
        "key": "ctrl+alt+q",
        "mac": "cmd+alt+q",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "byte.menu",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "byte.menu": [
        {
          "command": "byte.codeChat",
          "group": "z_byte@1"
        },
        {
          "command": "byte.inlineCodeAnalysis",
          "group": "z_byte@2"
        },
        {
          "command": "byte.askQuestionAboutCode",
          "group": "z_byte@3"
        },
        {
          "command": "byte.explainCode",
          "group": "z_byte@4"
        },
        {
          "command": "byte.refactorCode",
          "group": "z_byte@5"
        },
        {
          "command": "byte.generateDocs",
          "group": "z_byte@6"
        },
        {
          "command": "byte.optimizeCode", 
          "group": "z_byte@7"
        },
        {
          "command": "byte.generateTests",
          "group": "z_byte@8"
        },
        {
          "command": "byte.addComments",
          "group": "z_byte@9"
        },
        {
          "command": "byte.findIssues",
          "group": "z_byte@10"
        }
      ]
    },
    "submenus": [
      {
        "id": "byte.menu",
        "label": "Byte AI Assistant"
      }
    ],
    "configuration": {
      "title": "Byte",
      "properties": {
        "byte.provider": {
          "type": "string",
          "enum": [
            "openai",
            "gemini",
            "local"
          ],
          "default": "openai",
          "description": "AI servis sağlayıcısını seçin"
        },
        "byte.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API anahtarı (güvenlik nedeniyle Secret Storage'da saklamak önerilir)"
        },
        "byte.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API anahtarı"
        },
        "byte.local.endpoint": {
          "type": "string",
          "default": "http://localhost:11434/api/generate",
          "description": "Ollama servisinizin uç noktası"
        },
        "byte.local.model": {
          "type": "string",
          "default": "llama3",
          "description": "Ollama'da kullanılacak olan model adı (llama3, codellama, mistral vb.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}
